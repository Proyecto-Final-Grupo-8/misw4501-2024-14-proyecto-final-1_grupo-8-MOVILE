{
  "cli": {
    "version": ">= 12.6.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "ios": { "simulator": true },
      "android": { 
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease" 
      }
    },
    "production": {
        "autoIncrement": true,
        "android": {
          "buildType": "app-bundle",
          "gradleCommand": ":app:bundleRelease --info"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
